<html xmlns="http://www.w3.org/1999/xhtml" ng-app="Calculator">
<head>
    <title></title>
    <script src="~/lib/angular/angular.js"></script>
    <script src="~/ngapp/app.js"></script>
</head>
<body>
    

    <div>

        <h2 style="font-family:Arial, Helvetica, sans-serif; color:mediumvioletred">Add Numbers</h2>
        <input type="number" ng-model="num1" />
        <select>
            <option value="+" class="math">+</option>
            <option value="-"class="math">-</option>
            <option value="*"class="math">*</option>
            <option value="/">/</option>
        
        </select>
        <input type="number" ng-model="num2" />

        <p style="font-family:Arial, Helvetica, sans-serif; color:mediumvioletred">{{num1 + num2}}</p>
    </div>

</body>
</html>